{
  "name": "@northscaler/property-decorator",
  "version": "0.3.0-pre.0",
  "description": "Provides enriched properties in classes",
  "homepage": "https://gitlab.com/northscaler-public/property-decorator",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/northscaler-public/property-decorator"
  },
  "keywords": [
    "property",
    "properties",
    "entity",
    "entities",
    "models",
    "validation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10.3.0"
  },
  "scripts": {
    "prebuild": "npm ci || npm install",
    "build": "npm test",
    "transpile": "run-s transpile-main transpile-test",
    "clean": "rimraf dist docs coverage .nyc_output",
    "prenuke": "npm run clean",
    "nuke": "rimraf node_modules",
    "transpile-main": "babel --delete-dir-on-start --verbose --out-dir dist/main --copy-files src/main",
    "transpile-test": "babel --delete-dir-on-start --verbose --out-dir dist/test --copy-files src/test",
    "unit-integration": "nyc --check-coverage -x 'dist/test' --exclude-after-remap false mocha --exit 'dist/test/unit/**/*.spec.js' 'dist/test/integration/**/*.spec.js'",
    "postunit-integration": "run-s report",
    "integration": "nyc -x 'dist/test' --exclude-after-remap false mocha --exit 'dist/test/integration/**/*.spec.js'",
    "postintegration": "run-s report",
    "i": "mocha --exit 'src/test/integration/**/*.spec.js'",
    "test-grep": "mocha --exit 'src/test/{unit,integration}/**/*.spec.js' --grep",
    "unit": "nyc -x 'dist/test' --exclude-after-remap false mocha --exit 'dist/test/unit/**/*.spec.js'",
    "postunit": "run-s report",
    "u": "mocha --exit 'src/test/unit/**/*.spec.js'",
    "test": "run-s transpile unit-integration lint",
    "report": "nyc report --reporter=html",
    "lint": "standard --lint index.js 'src/**/*.js'",
    "lint-staged": "standard --lint --staged --check 'src/**/*.js'",
    "format": "standard --format index.js 'src/**/*.js'",
    "make-distribution": "run-s transpile doc lic",
    "doc": "jsdoc --verbose -d docs -r -c jsdoc.json -R README.md src/main",
    "lic": "node lic.js > LICENSE",
    "pre-commit": "run-s lint-staged",
    "pre-push": "run-s test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run pre-push"
    }
  },
  "files": [
    "dist/",
    "docs/",
    "src/",
    "index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/polyfill": "7.12.1"
  },
  "devDependencies": {
    "@babel/cli": "7.23.0",
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-decorators": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/register": "7.12.1",
    "acorn": "8.0.4",
    "babel-eslint": "10.1.0",
    "chai": "4.2.0",
    "copyfiles": "2.4.0",
    "dirty-chai": "2.0.1",
    "fs-extra": "9.0.1",
    "husky": "4.3.8",
    "intercept-stdout": "0.1.2",
    "jsdoc": "4.0.2",
    "lodash.template": "4.5.0",
    "mocha": "10.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "standard": "16.0.2"
  },
  "babel": {
    "sourceMaps": "both",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-optional-chaining",
        {
          "loose": false
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "legacy": false
        }
      ]
    ]
  },
  "mocha": {
    "colors": true,
    "require": "@babel/register"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "volta": {
    "node": "12.19.0"
  }
}
